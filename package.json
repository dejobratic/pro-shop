{
  "name": "pro-shop",
  "version": "1.0.0",
  "description": "MERN e-commerce platform built with React, Redux, Express & MongoDB",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server/server",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "data:import": "node server/seeder",
    "data:destroy": "node server/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dejobratic/pro-shop.git"
  },
  "author": "Dejan Bratic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dejobratic/pro-shop/issues"
  },
  "homepage": "https://github.com/dejobratic/pro-shop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "mongoose": "^5.10.11"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
